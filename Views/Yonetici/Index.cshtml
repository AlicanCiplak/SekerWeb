@using SekerWeb.Models.Entity
@model List<Hasta>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">AdSoyad</th>
            <th scope="col">Hekim</th>
            <th scope="col">TC</th>
            <th scope="col">Tip</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var hasta in Model)
        {
        <tr>

            <td>@hasta.AdSoyad</td>
            <td>@hasta.Hekim.AdSoyad</td>
            <td>@hasta.TC</td>
            <td>@hasta.Tip</td>
            <td><a href="/Yonetici/HastaSil/@hasta.İD" class="btn btn-danger">Sil </a></td>
            <td><a href="#" class="btn btn-success">Güncelle </a></td>

        </tr>
        }
        </tbody>
</table>
<a href="#" class="btn btn-primary">Ekle</a>
