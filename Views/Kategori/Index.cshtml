@using SekerWeb.Models.Entity
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">İD</th>
            <th scope="col">Kategori</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var kat in Model)
        {
        <tr>

            <td>@kat.id</td>
            <td>@kat.Kategoriler</td>
            <td><a href="#" class="btn btn-danger">Sil </a></td>
            <td><a href="/Kategori/KategoriGetir/@kat.id" class="btn btn-success">Güncelle </a></td>


        </tr>
        }
    </tbody>
</table>

<a href="/Kategori/KategoriEkle" class="btn btn-primary">Ekle</a>